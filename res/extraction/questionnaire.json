{
  "tobacco_pattern": [
    "(?i)(tob\\s*[:?-]|tobacco products|tobacco history|tobacco use\\s*[:?-]|tobacco\\s*[:?-])\\s*([\\w-]+(?:\\s[\\w-]+){0,2})?\\s*",
    "(?i)Tobacco Use  \\(Current\\)............:\\s*([\\w-]+(?:\\s+[\\w-]+)?)"
  ],
